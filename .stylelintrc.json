{
  "extends": ["stylelint-config-recess-order", "stylelint-config-standard"],
  "ignoreFiles": ["**/node_modules/**"],
  "rules": {
    "selector-class-pattern": "^(([a-z][a-zA-Z0-9_]+)|([a-z][a-z0-9]*)(-[a-zA-Z0-9_]+)*)$",
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "include",
          "mixin",
          "define-mixin",
          "each",
          "if",
          "else",
          "extend"
        ]
      }
    ],
    "at-rule-empty-line-before": ["always", { "except": ["inside-block"] }],
    "import-notation": "string"
  }
}
